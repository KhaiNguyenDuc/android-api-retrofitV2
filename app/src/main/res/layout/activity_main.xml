<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/pro_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Id: "
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/pro_content_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pro_id"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/pro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro_id"
        android:text="Title: "
        android:textSize="24dp" />

    <TextView
        android:id="@+id/pro_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pro_title"
        app:layout_constraintTop_toBottomOf="@id/pro_content_id"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/pro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro_title"
        android:text="Price: "
        android:textSize="24dp" />

    <TextView
        android:id="@+id/pro_content_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pro_price"
        app:layout_constraintTop_toBottomOf="@id/pro_content_title"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btn_fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pro_content_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Fetch data"/>
</androidx.constraintlayout.widget.ConstraintLayout>